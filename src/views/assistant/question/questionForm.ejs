<% const dir=process.cwd() %>
<!DOCTYPE html>
<html lang="ko">
<%- include(dir + '/src/views/common/head' ) %>
<!-- Include CKEditor5 -->

<head>
  <script src="/javascripts/ckeditor.js"></script>
  <style>
    .ck-editor__editable {
      min-height: 100px;
    }
  </style>
</head>

<body>
  <%- include(dir + '/src/views/common/navbar-admin' ) %>
  <div class="alert alert-danger d-none" id="alert_box">
    <strong id="alert_mention"></strong>
  </div>
  <div class="container-sm mt-3">
    <div class="title">
      <div class="mt-1 mb-3">
        <span class="badge bg-primary fs-6 fw-bold">
          건의/질문 작성
        </span>
      </div>
      <div>
        <div class="form-check d-flex align-items-center mb-1">
          <input class="form-check-input me-1" type="checkbox" id="privateSelecter" onclick="toggleInput()">
          <label class="form-check-label me-2" for="flexCheckIndeterminate">비밀글 작성</label>
          <input class="form-control form-control-sm w-25 d-none" type="password" placeholder="비밀번호" id="privatePassword">
        </div>
      </div>
      <div class="d-grid">
        <input type="text" class="form-control" id="InputTitle" placeholder="제목을 입력해 주세요." maxlength="25">
      </div>
    </div>
    <div class="content-container mt-2 ">
      <div class="content shadow-sm">
      </div>
      <div class="d-flex justify-content-end mt-3">
        <button type="button" class="btn btn-primary" id="postQuestion">게시글 등록</button>
      </div>
    </div>
  </div>
  <%- include(dir + '/src/views/common/footer' ) %>
  <script>
    // Function For Private Question Input
    function toggleInput() {
      const check = document.querySelector('#privateSelecter');
      const pw = document.querySelector('#privatePassword');
      if(check.checked){
        pw.classList.remove('d-none');
      }
      else{
        pw.classList.add('d-none');
      }
    }

    // CKEditor 5
    let editor;
    ClassicEditor
      .create(document.querySelector('.content'), {
        placeholder: '내용을 입력하세요. '
      })
      .then(newEditor => {
        editor = newEditor;
      })
      .catch(error => {
        console.error(error);
      });

    const PostQuestionForm = (req, res) => {
      const title = document.querySelector('#InputTitle').value;
      const secret = document.querySelector('#privateSelecter');
      const pw = document.querySelector('#privatePassword');
      const content = editor.getData();
      const timestamp = new Date().toISOString().slice(0, 19).replace('T', ' ');

      const box = document.querySelector('#alert_box');
      const mention = document.querySelector('#alert_mention');

      fetch('/assistant/question/form', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            title: title,
            secret: secret.checked,
            password: pw.value,
            content: content,
            timestamp: timestamp
          })
        })
        .then((response) => {
          if (response.ok) {
            box.classList.add('d-none');
            return response.json();
          }
          return Promise.reject()
        })
        .then((data) => {
          if (data.success == true) {
            return location.href = "/assistant/question";
          } else {
            mention.textContent = '게시글 저장에 실패하였습니다.';
            box.classList.remove('d-none');
          }
        })
        .catch((error) => {
          console.error(error);
        })
    }

    const btn = document.querySelector('#postQuestion');
    btn.addEventListener('click', PostQuestionForm);
  </script>
</body>

</html>